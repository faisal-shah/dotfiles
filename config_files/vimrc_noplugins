if has('autocmd')
  filetype plugin indent on
endif
if has('syntax') && !exists('g:syntax_on')
  syntax enable
endif

set backspace=indent,eol,start
set smarttab
set ignorecase
set tabstop=4
set shiftwidth=4
set expandtab
set autoindent

set incsearch
set hlsearch

" i option makes it laggy ...
set complete-=i

" For C-x, C-a
set nrformats-=octal

if !has('nvim') && &ttimeoutlen == -1
    set ttimeout
    set ttimeoutlen=100
endif

colorscheme darkblue
set number
set laststatus=2
set ruler
set wildmenu
set wildcharm=<C-z>
set wildmode=list:full
set path-=/usr/include

set whichwrap+=<,>,h,l
if !&scrolloff
  set scrolloff=4
endif

if !&sidescrolloff
  set sidescrolloff=5
endif

set display+=lastline

if &listchars ==# 'eol:$'
  set listchars=tab:>\ ,trail:-,extends:>,precedes:<,nbsp:+
endif

" Load matchit.vim, but only if the user hasn't installed a newer version.
if !exists('g:loaded_matchit') && findfile('plugin/matchit.vim', &rtp) ==# ''
  runtime! macros/matchit.vim
endif

"hi CursorLine   cterm=NONE ctermbg=DarkRed ctermfg=white guibg=darkred guifg=white
set cursorline

set splitbelow
set splitright

if &encoding ==# 'latin1' && has('gui_running')
  set encoding=utf-8
endif

set autoread
set mouse=a
if has("mouse_sgr")
    set ttymouse=sgr
else
    set ttymouse=xterm2
end

" clear highlight
nnoremap <Leader><Space> :noh<Return>:<Backspace>
nnoremap <Leader>e :e **/*
nnoremap <Leader>f :find **/*

" movement by screen line instead of file line (for text wrap)
nnoremap j gj
nnoremap <down> gj
nnoremap k gk
nnoremap <up> gk

" Move between splits (windows)
noremap <C-h> <C-w>h
noremap <C-j> <C-w>j
noremap <C-k> <C-w>k
noremap <C-l> <C-w>l

" Don't obliterate windows layout by accident
" https://vim.fandom.com/wiki/How_to_avoid_obliterating_window_layout
nnoremap <C-W>O :echo "sucker"<CR>
nnoremap <C-W>o :echo "sucker"<CR>
nnoremap <C-W><C-O> :echo "sucker"<CR>

" Yank till the end of line
nnoremap Y y$
"
" Indent visual mode, keep highlighted
vmap > >gv
vmap < <gv

" Play back macro in register q
nnoremap Q @q

" Delete till end of row in insert mode
inoremap <C-D> <C-\><C-O>D
